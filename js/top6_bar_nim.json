{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Top 6 SA4 regions by Net Internal Migration (NIM), 2024", "anchor": "start"},
  "data": {
    "url": "https://raw.githubusercontent.com/jpso0002/A2/refs/heads/main/data/sa4_migration.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"filter": "datum.year == 2024"},
    {
      "window": [
        {"op": "rank", "as": "rank"}
      ],
      "sort": [{"field": "net_migration_nim", "order": "descending"}]
    },
    {"filter": "datum.rank <= 6"}
  ],
  "mark": {"type": "bar", "cornerRadiusEnd": 4},
  "encoding": {
    "y": {
      "field": "SA4_NAME",
      "type": "nominal",
      "title": "Region (SA4)",
      "sort": "-x"
    },
    "x": {
      "field": "net_migration_nim",
      "type": "quantitative",
      "title": "Net Internal Migration (NIM)",
      "axis": {"format": ",d"},
      "scale": { "nice": true }
    },
    "tooltip": [
      {"field": "SA4_NAME", "title": "Region"},
      {"field": "net_migration_nim", "title": "NIM", "format": ","}
    ],
    "color": {
      "value": "#7fbf7b"
    }
  },
  "width": "container",
  "height": {"step": 50},
  "config": {
    "view": {"stroke": null},
    "axis": {"labelLimit": 220}
  }
}
