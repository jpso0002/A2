{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australia Net Internal Migration per Region (per 1,000)",
  "width": 900,
  "height": 650,
  "projection": {"type": "mercator"},
  "data": {
    "url": "js/sa4_2021.topojson",
    "format": {"type": "topojson", "feature": "SA4_2021_AUST_GDA2020"}
  },
  "transform": [
    {
      "lookup": "properties.SA4_CODE21",
      "from": {
        "data": {"url": "data/sa4_migration.csv"},
        "key": "SA4_CODE21",
        "fields": ["year","net_migration","population","SA4_NAME21"]
      }
    },
    {
      "calculate": "(datum.net_migration / datum.population) * 1000",
      "as": "net_per_1000"
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "net_per_1000",
      "type": "quantitative",
      "title": "Net internal migration per 1,000",
      "scale": {
        "type": "threshold",
        "domain": [-10, -5, -1, 1, 5, 10],
        "range": ["#67001f","#b2182b","#d6604d","#f7f7f7","#92c5de","#4393c3","#2166ac"]
      }
    },
    "tooltip": [
      {"field": "properties.SA4_NAME21", "title": "Region"},
      {"field": "net_migration", "title": "Net migration", "format": ","},
      {"field": "population", "title": "Population", "format": ","},
      {"field": "net_per_1000", "title": "Per 1,000", "format": ".2f"}
    ]
  },
  "config": {
    "legend": {"orient": "right"},
    "view": {"stroke": null}
  }
}
